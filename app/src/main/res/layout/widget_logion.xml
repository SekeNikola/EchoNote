<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Assistant Button at the top -->
    <Button
        android:id="@+id/btn_assistant"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/widget_button_assistant"
        android:text="✨ AI Assistant"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- First row: Record Audio, Upload Audio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_record_audio"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_background"
            android:text="🎙️ Record"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_upload_audio"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/widget_button_background"
            android:text="🎵 Upload Audio"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Second row: Take Picture, Upload Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_take_picture"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_background"
            android:text="📷 Camera"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_upload_image"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/widget_button_background"
            android:text="🖼️ Upload Image"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Third row: Type Text, Videos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_type_text"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_background"
            android:text="✏️ Type Text"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_videos"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/widget_button_background"
            android:text="🎬 Videos"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Fourth row: Web Page URL, Upload Files -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_web_page"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_background"
            android:text="🌐 Web Page"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_upload_files"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/widget_button_background"
            android:text="📁 Upload Files"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
